                <BoxView Grid.Row="0" Grid.Column="6" Grid.ColumnSpan="7" Color="Gray" HeightRequest="1" HorizontalOptions="Fill" VerticalOptions="Start" />
                <BoxView Grid.Row="0" Grid.Column="6" Grid.ColumnSpan="7" Color="Gray" WidthRequest="1" HorizontalOptions="Start" VerticalOptions="Fill" />
                <Label Grid.Row="0" Grid.Column="6" Grid.ColumnSpan="7" Text="Стволы" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                <BoxView Grid.Row="0" Grid.Column="6" Grid.ColumnSpan="7" Color="Gray" HeightRequest="1" HorizontalOptions="Fill" VerticalOptions="End" />
                <BoxView Grid.Row="0" Grid.Column="6" Grid.ColumnSpan="7" Color="Gray" WidthRequest="1" HorizontalOptions="End" VerticalOptions="Fill" />

