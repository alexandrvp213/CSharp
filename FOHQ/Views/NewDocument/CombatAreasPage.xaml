                <Label x:Name="lblTotalGasUnits" Grid.Column="5" Text="" Margin="8" VerticalTextAlignment="Center" />
                <BoxView Grid.Column="5" Color="Gray" HeightRequest="1" HorizontalOptions="Fill" VerticalOptions="End" />
                <BoxView Grid.Column="5" Color="Gray" WidthRequest="1" HorizontalOptions="End" VerticalOptions="Fill" />

                <BoxView Grid.Column="6" Color="Gray" HeightRequest="1" HorizontalOptions="Fill" VerticalOptions="Start" />
                <BoxView Grid.Column="6" Color="Gray" WidthRequest="1" HorizontalOptions="Start" VerticalOptions="Fill" />
                <Label x:Name="lblTotalBarrelsRs50" Grid.Column="6" Text="" Margin="8" VerticalTextAlignment="Center" />
                <BoxView Grid.Column="6" Color="Gray" HeightRequest="1" HorizontalOptions="Fill" VerticalOptions="End" />
                <BoxView Grid.Column="6" Color="Gray" WidthRequest="1" HorizontalOptions="End" VerticalOptions="Fill" />

                <BoxView Grid.Column="7" Color="Gray" HeightRequest="1" HorizontalOptions="Fill" VerticalOptions="Start" />
                <BoxView Grid.Column="7" Color="Gray" WidthRequest="1" HorizontalOptions="Start" VerticalOptions="Fill" />
                <Label x:Name="lblTotalBarrelsRs70" Grid.Column="7" Text="" Margin="8" VerticalTextAlignment="Center" />
                <BoxView Grid.Column="7" Color="Gray" HeightRequest="1" HorizontalOptions="Fill" VerticalOptions="End" />
                <BoxView Grid.Column="7" Color="Gray" WidthRequest="1" HorizontalOptions="End" VerticalOptions="Fill" />

                <BoxView Grid.Column="8" Color="Gray" HeightRequest="1" HorizontalOptions="Fill" VerticalOptions="Start" />
                <BoxView Grid.Column="8" Color="Gray" WidthRequest="1" HorizontalOptions="Start" VerticalOptions="Fill" />
                <Label x:Name="lblTotalBarrelsVarFlow" Grid.Column="8" Text="" Margin="8" VerticalTextAlignment="Center" />
                <BoxView Grid.Column="8" Color="Gray" HeightRequest="1" HorizontalOptions="Fill" VerticalOptions="End" />
                <BoxView Grid.Column="8" Color="Gray" WidthRequest="1" HorizontalOptions="End" VerticalOptions="Fill" />

                <BoxView Grid.Column="9" Color="Gray" HeightRequest="1" HorizontalOptions="Fill" VerticalOptions="Start" />
                <BoxView Grid.Column="9" Color="Gray" WidthRequest="1" HorizontalOptions="Start" VerticalOptions="Fill" />
                <Label x:Name="lblTotalBarrelsL" Grid.Column="9" Text="" Margin="8" VerticalTextAlignment="Center" />
                <BoxView Grid.Column="9" Color="Gray" HeightRequest="1" HorizontalOptions="Fill" VerticalOptions="End" />
                <BoxView Grid.Column="9" Color="Gray" WidthRequest="1" HorizontalOptions="End" VerticalOptions="Fill" />

                <BoxView Grid.Column="10" Color="Gray" HeightRequest="1" HorizontalOptions="Fill" VerticalOptions="Start" />
                <BoxView Grid.Column="10" Color="Gray" WidthRequest="1" HorizontalOptions="Start" VerticalOptions="Fill" />
                <Label x:Name="lblTotalBarrelsGps" Grid.Column="10" Text="" Margin="8" VerticalTextAlignment="Center" />
                <BoxView Grid.Column="10" Color="Gray" HeightRequest="1" HorizontalOptions="Fill" VerticalOptions="End" />
                <BoxView Grid.Column="10" Color="Gray" WidthRequest="1" HorizontalOptions="End" VerticalOptions="Fill" />

                <BoxView Grid.Column="11" Color="Gray" HeightRequest="1" HorizontalOptions="Fill" VerticalOptions="Start" />
                <BoxView Grid.Column="11" Color="Gray" WidthRequest="1" HorizontalOptions="Start" VerticalOptions="Fill" />
                <Label x:Name="lblTotalBarrelsSvp" Grid.Column="11" Text="" Margin="8" VerticalTextAlignment="Center" />
                <BoxView Grid.Column="11" Color="Gray" HeightRequest="1" HorizontalOptions="Fill" VerticalOptions="End" />
                <BoxView Grid.Column="11" Color="Gray" WidthRequest="1" HorizontalOptions="End" VerticalOptions="Fill" />

                <BoxView Grid.Column="12" Color="Gray" HeightRequest="1" HorizontalOptions="Fill" VerticalOptions="Start" />
                <BoxView Grid.Column="12" Color="Gray" WidthRequest="1" HorizontalOptions="Start" VerticalOptions="Fill" />
                <Label x:Name="lblTotalBarrelsOther" Grid.Column="12" Text="" Margin="8" VerticalTextAlignment="Center" />
                <BoxView Grid.Column="12" Color="Gray" HeightRequest="1" HorizontalOptions="Fill" VerticalOptions="End" />
                <BoxView Grid.Column="12" Color="Gray" WidthRequest="1" HorizontalOptions="End" VerticalOptions="Fill" />
            </Grid>

            <ImageButton
                x:Name="btnAddCombatArea"
                Source="add_item.png" BackgroundColor="Transparent"
                Margin="30"
                HeightRequest="60" WidthRequest="60" HorizontalOptions="End" 
                Clicked="BtnAddCombatArea_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>