                <BoxView Grid.Row="1" Grid.Column="6" Color="Gray" WidthRequest="1" HorizontalOptions="Start" VerticalOptions="Fill" />
                <Label Grid.Row="1" Grid.Column="6" Text="РС-50" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                <BoxView Grid.Row="1" Grid.Column="6" Color="Gray" HeightRequest="1" HorizontalOptions="Fill" VerticalOptions="End" />
                <BoxView Grid.Row="1" Grid.Column="6" Color="Gray" WidthRequest="1" HorizontalOptions="End" VerticalOptions="Fill" />
                <BoxView Grid.Row="1" Grid.Column="7" Color="Gray" HeightRequest="1" HorizontalOptions="Fill" VerticalOptions="Start" />
                <BoxView Grid.Row="1" Grid.Column="7" Color="Gray" WidthRequest="1" HorizontalOptions="Start" VerticalOptions="Fill" />
                <Label Grid.Row="1" Grid.Column="7" Text="РС-70" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                <BoxView Grid.Row="1" Grid.Column="7" Color="Gray" HeightRequest="1" HorizontalOptions="Fill" VerticalOptions="End" />
                <BoxView Grid.Row="1" Grid.Column="7" Color="Gray" WidthRequest="1" HorizontalOptions="End" VerticalOptions="Fill" />
                <BoxView Grid.Row="1" Grid.Column="8" Color="Gray" HeightRequest="1" HorizontalOptions="Fill" VerticalOptions="Start" />
                <BoxView Grid.Row="1" Grid.Column="8" Color="Gray" WidthRequest="1" HorizontalOptions="Start" VerticalOptions="Fill" />
                <Label Grid.Row="1" Grid.Column="8" Text="Стволы с регулируемым расходом" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
